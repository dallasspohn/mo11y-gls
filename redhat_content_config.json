  "task_mappings": {
    "create_lecture": {
      "content_type": "lecture",
      "instruction_file": "instructions/lectures.md",
      "template_file": "templates/lecture-template.adoc",
      "style_guides": [
        "style-guides/asciidoc-formatting.md",
        "style-guides/content-structure.md",
        "style-guides/writing-style.md"
      ],
      "examples": [
        "examples/lecture-sample.adoc",
        "examples/lecture-sample0.adoc",
        "examples/lecture-sample1.adoc",
        "examples/lecture-sample2.adoc"
      ]
    },
    "create_guided_exercise": {
      "content_type": "guided-exercise",
      "instruction_file": "instructions/guided-exercises.md",
      "template_file": "templates/ge-template.adoc",
      "style_guides": [
        "style-guides/asciidoc-formatting.md",
        "style-guides/content-structure.md",
        "style-guides/writing-style.md"
      ],
      "standards": [
        "GE-numbering-patterns.md",
        "GE-mistakes.md",
        "COLLECTIONS_GE_README.md"
      ],
      "examples": [
        "examples/ge-sample.adoc",
        "examples/ge-sample0.adoc",
        "examples/ge-sample1.adoc",
        "examples/ge-sample2.adoc",
        "examples/ge_finish.adoc"
      ]
    },
    "create_dynolab": {
      "content_type": "dynolab",
      "instruction_file": "instructions/dynolabs.md",
      "style_guides": [
        "style-guides/asciidoc-formatting.md",
        "style-guides/content-structure.md"
      ],
      "standards": [
        "dynolabs-system-structure.md",
        "ansible-module-updates.md"
      ],
      "examples": [
        "classroom.structure/"
      ]
    },
    "create_lab": {
      "content_type": "dynolab",
      "instruction_file": "instructions/dynolabs.md",
      "standards": [
        "dynolabs-system-structure.md"
      ],
      "examples": [
        "classroom.structure/"
      ]
    },
    "peer_review_content": {
      "content_type": "peer-review",
      "instruction_file": "instructions/peer-review.md",
      "standards": [
        "peer-review-checklist.md"
      ],
      "examples": [
        "peer-review-checklist.md"
      ]
    }
  },
  
  "file_structure": {
    "lecture": {
      "base_name": "{topic-slug}",
      "extension": ".adoc",
      "location": "lectures/"
    },
    "guided_exercise": {
      "base_name": "{course-id}-{topic-slug}-ge",
      "extension": ".adoc",
      "location": "guided-exercises/"
    },
    "dynolab": {
      "base_structure": "classroom.structure/grading/src/<course-id>/materials/labs/{lab-name}/",
      "components": {
        "python_scripts": "*.py",
        "ansible_playbooks": "*.yml",
        "ansible_navigator": "ansible-navigator.yml",
        "solutions": "solutions/",
        "inventory": "inventory",
        "group_vars": "group_vars/"
      }
    }
  },
  
  "validation_rules": {
    "asciidoc": {
      "required_sections": [
        "title",
        "metadata"
      ],
      "formatting_rules": "style-guides/asciidoc-formatting.md"
    },
    "ge": {
      "required_sections": [
        "title",
        "metadata",
        "objectives",
        "instructions",
        "solutions"
      ],
      "numbering_pattern": "GE-numbering-patterns.md"
    },
    "dynolab": {
      "required_components": [
        "python_script",
        "ansible_playbook",
        "ansible_navigator_config"
      ],
      "structure_requirements": "dynolabs-system-structure.md"
    }
  },
  
  "usage": {
    "description": "This configuration file maps all available tasks and resources from the redhat-content-standards repository",
    "integration": "Used by redhat_content_creator.py to understand available content types, instructions, templates, and standards",
    "auto_update": "When auto_pull is enabled in config.json, this repository is automatically updated before content creation"
  }
}
