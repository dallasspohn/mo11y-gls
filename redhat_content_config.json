{
  "version": "1.0.0",
  "description": "Configuration file mapping all available Red Hat content creation tasks and resources from redhat-content-standards repository",
  "standards_repo": "https://github.com/dallasspohn/redhat-content-standards.git",
  
  "content_types": {
    "lecture": {
      "name": "Lecture",
      "description": "Instructional content that teaches concepts and provides background information",
      "instruction_file": "instructions/lectures.md",
      "template_file": "templates/lecture-template.adoc",
      "examples": [
        "examples/lecture-sample.adoc",
        "examples/lecture-sample0.adoc",
        "examples/lecture-sample1.adoc",
        "examples/lecture-sample2.adoc"
      ],
      "output_extension": ".adoc",
      "keywords": [
        "lecture",
        "lectures",
        "lesson",
        "lessons",
        "instructional content"
      ]
    },
    "guided-exercise": {
      "name": "Guided Exercise (GE)",
      "description": "Step-by-step exercises with detailed instructions and solutions. Students follow along with provided solutions",
      "instruction_file": "instructions/guided-exercises.md",
      "template_file": "templates/ge-template.adoc",
      "examples": [
        "examples/ge-sample.adoc",
        "examples/ge-sample0.adoc",
        "examples/ge-sample1.adoc",
        "examples/ge-sample2.adoc",
        "examples/ge_finish.adoc"
      ],
      "output_extension": ".adoc",
      "keywords": [
        "ge",
        "guided exercise",
        "guided exercises",
        "guided-exercise",
        "guided-exercises",
        "exercise",
        "exercises"
      ],
      "related_docs": [
        "GE-numbering-patterns.md",
        "GE-mistakes.md",
        "COLLECTIONS_GE_README.md"
      ]
    },
    "dynolab": {
      "name": "Dynolab",
      "description": "Lab infrastructure components including Python scripts, Ansible playbooks, and lab materials",
      "instruction_file": "instructions/dynolabs.md",
      "template_file": null,
      "examples": [
        "classroom.structure/"
      ],
      "output_structure": "classroom.structure/",
      "keywords": [
        "dynolab",
        "dynolabs",
        "lab",
        "labs",
        "lab script",
        "lab scripts",
        "infrastructure",
        "ansible",
        "playbook",
        "playbooks"
      ],
      "related_docs": [
        "dynolabs-system-structure.md",
        "ansible-module-updates.md"
      ],
      "components": {
        "python_scripts": "Lab control scripts",
        "ansible_playbooks": "Setup and cleanup playbooks",
        "lab_materials": "Inventory files, config files, solutions",
        "ansible_navigator_config": "ansible-navigator.yml configuration"
      }
    },
    "peer-review": {
      "name": "Peer Review",
      "description": "Comprehensive peer review instructions covering all content types (Lectures, GEs, Labs, Dynolabs)",
      "instruction_file": "instructions/peer-review.md",
      "template_file": null,
      "examples": [
        "peer-review-checklist.md"
      ],
      "keywords": [
        "peer review",
        "review",
        "checklist",
        "quality assurance",
        "qa"
      ],
      "related_docs": [
        "peer-review-checklist.md"
      ]
    }
  },
  
  "style_guides": {
    "asciidoc_formatting": {
      "path": "style-guides/asciidoc-formatting.md",
